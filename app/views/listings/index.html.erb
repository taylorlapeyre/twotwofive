<div class="container"><!-- container -->
  <div id="container">
    <!-- begin group -->
    <% @listings.each do |listing| %>
      <div class="col-lg-3 col-md-3 col-sm-4 col-xs-4 item 1bd 2bd 3bd 4bd 1ba 2ba 3ba">
        <%= link_to(listing) do %>
          <div class="panel panel-default">
            <div class="listing-panel-body">
              <img src="http://media.apts247.info/2a/2a9b95fef14b4be99193a3e463322411/galleries/community/amenitiesIMG_8927.jpg" class="img-responsive" />
            </div>
            <div class="panel-footer">
              <div class="row footer-top">
                <div class="col-lg-12">
                  <h3 class="panel-title pull-left"><%= listing.building_name %></h3>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-10">
                  <p><%= listing.lowest_num_bedrooms %> - <%= listing.highest_num_bedrooms %> Bedrooms</p>
                </div>
                <div class="col-sm-2">
                  <h3 class="panel-title price pull-right">$<%= listing.lowest_rent %>+</h3>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>